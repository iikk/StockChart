<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.isaac.mystockchart.tryit.view.ChartHeadView
            android:id="@+id/head_view"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>


        <cn.isaac.mystockchart.tryit.view.SelectBar
            android:id="@+id/select_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/minute"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <cn.isaac.mystockchart.tryit.view.MinuteView
                android:id="@+id/minute_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

            <cn.isaac.mystockchart.tryit.view.GrpTickView
                android:id="@+id/grp_tick_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
            <cn.isaac.mystockchart.tryit.view.KlineView
                android:visibility="gone"
                android:id="@+id/kline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
